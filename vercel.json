{
    "version": 2,
    "functions": {
        "api/index.js": {
            "includeFiles": "public/**"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/static/(.*)",
            "destination": "/public/static/$1"
        },
        {
            "source": "/manifest.json",
            "destination": "/public/manifest.json"
        },
        {
            "source": "/favicon.ico",
            "destination": "/public/favicon.ico"
        },
        {
            "source": "/(.*\\.[^/]+)$",
            "destination": "/public/$1"
        },
        {
            "source": "/((?!api/).*)",
            "destination": "/public/index.html"
        }
    ]
}